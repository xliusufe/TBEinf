\examples{
y <- seq(10, 20, by = 0.1)
n <- length(y)
p <- 10
x <- matrix(runif(n * p), nrow = n, ncol = p)
X <- cbind(1, x)
beta <- rep(-0.01, p)
m0 <- rep(5,n)
phi <- 0.5
dTBEinf(y, X, beta, phi, method="real")
dTBEinf(y, X, beta, phi)
dTBEinf(y, X, beta, phi, method="finverse", m=m0)
dTBEinf(y, X, beta, phi, method="mWtrans")
} 
